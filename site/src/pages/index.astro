---
import Layout from '../layouts/Layout.astro';

const quickLinks = [
  { label: 'GitHub Issues', href: 'https://github.com/PR-CYBR/PR-CYBR-MAP/issues', icon: 'bug' },
  { label: 'Discussions', href: 'https://github.com/PR-CYBR/PR-CYBR-MAP/discussions', icon: 'chat' },
  { label: 'Releases', href: 'https://github.com/PR-CYBR/PR-CYBR-MAP/releases', icon: 'release' },
  { label: 'Features', href: '/PR-CYBR-MAP/docs#features', icon: 'doc' },
  { label: 'PR Summary', href: '/PR-CYBR-MAP/docs#pr-summary', icon: 'doc' },
  { label: 'Testing Guide', href: '/PR-CYBR-MAP/docs#testing', icon: 'doc' },
];
---

<Layout title="PR-CYBR-MAP">
  <div class="container mx-auto px-4 py-8 max-w-7xl">
    <!-- Hero Section -->
    <div class="hero min-h-[60vh] bg-base-200 rounded-box mb-8">
      <div class="hero-content text-center">
        <div class="max-w-3xl">
          <h1 class="text-5xl font-bold bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
            PR-CYBR-MAP
          </h1>
          <p class="py-6 text-xl">
            Emergency Response & Situational Awareness for Puerto Rico
          </p>
          <div class="flex gap-4 justify-center flex-wrap">
            <a href="/PR-CYBR-MAP/map" class="btn btn-primary btn-lg">
              <svg class="h-6 w-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
              </svg>
              View Live Map
            </a>
            <a href="/PR-CYBR-MAP/statistics" class="btn btn-secondary btn-lg">
              <svg class="h-6 w-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
              </svg>
              Statistics
            </a>
            <a href="/PR-CYBR-MAP/docs" class="btn btn-outline btn-lg">
              <svg class="h-6 w-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              Documentation
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Status Chips -->
    <div class="alert alert-success shadow-lg mb-8">
      <svg class="stroke-current flex-shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <div>
        <h3 class="font-bold">Automated Data Updates</h3>
        <div class="text-xs">Powered by GitHub Actions â€¢ Updates every 30 minutes</div>
      </div>
      <div class="badge badge-success gap-2">
        <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
          <circle cx="10" cy="10" r="6" />
        </svg>
        Active
      </div>
    </div>

    <!-- About Section -->
    <div class="grid md:grid-cols-2 gap-8 mb-8">
      <div class="card bg-base-200 shadow-xl">
        <div class="card-body">
          <h2 class="card-title text-2xl">About the Project</h2>
          <div class="prose prose-sm max-w-none">
            <p>
              An interactive emergency response and situational awareness map of Puerto Rico, 
              featuring real-time data integration from NOAA, National Hurricane Center, and 
              other critical sources.
            </p>
            <p>
              Built with modern web technologies and designed for GitHub Pages deployment, 
              this map provides essential emergency information with zero server-side dependencies.
            </p>
          </div>
        </div>
      </div>

      <div class="card bg-base-200 shadow-xl">
        <div class="card-body">
          <h2 class="card-title text-2xl">Key Features</h2>
          <ul class="space-y-2">
            <li class="flex items-start gap-2">
              <svg class="h-5 w-5 text-success mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span>Live weather radar and alerts</span>
            </li>
            <li class="flex items-start gap-2">
              <svg class="h-5 w-5 text-success mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span>Hurricane tracking with forecast paths</span>
            </li>
            <li class="flex items-start gap-2">
              <svg class="h-5 w-5 text-success mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span>Emergency shelter locations with routing</span>
            </li>
            <li class="flex items-start gap-2">
              <svg class="h-5 w-5 text-success mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span>Utility grid status visualization</span>
            </li>
            <li class="flex items-start gap-2">
              <svg class="h-5 w-5 text-success mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span>Real-time SITREP and radio monitoring</span>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Quick Links -->
    <div class="card bg-base-200 shadow-xl">
      <div class="card-body">
        <h2 class="card-title text-2xl mb-4">Quick Links</h2>
        <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
          {quickLinks.map((link) => (
            <a
              href={link.href}
              class="btn btn-outline gap-2 justify-start"
              target={link.href.startsWith('http') ? '_blank' : undefined}
              rel={link.href.startsWith('http') ? 'noopener noreferrer' : undefined}
            >
              {link.icon === 'bug' && (
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              )}
              {link.icon === 'chat' && (
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                </svg>
              )}
              {link.icon === 'release' && (
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                </svg>
              )}
              {link.icon === 'doc' && (
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              )}
              <span class="text-sm truncate">{link.label}</span>
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
</Layout>
