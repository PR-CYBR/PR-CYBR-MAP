---
import Layout from '../layouts/Layout.astro';

const docs = [
  { 
    id: 'readme', 
    title: 'README', 
    icon: 'home',
    githubPath: 'README.md',
  },
  { 
    id: 'features', 
    title: 'Features', 
    icon: 'star',
    githubPath: 'FEATURES.md',
  },
  { 
    id: 'pr-summary', 
    title: 'PR Summary', 
    icon: 'document',
    githubPath: 'PR_SUMMARY.md',
  },
  { 
    id: 'testing', 
    title: 'Testing Guide', 
    icon: 'check',
    githubPath: 'TESTING.md',
  },
];
---

<Layout title="Documentation">
  <div class="container mx-auto px-4 py-8 max-w-7xl">
    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold mb-4">Documentation</h1>
      <p class="text-lg text-base-content/70">
        Project documentation and guides
      </p>
    </div>

    <div class="grid md:grid-cols-4 gap-6">
      <!-- Sidebar -->
      <div class="md:col-span-1">
        <div class="sticky top-20">
          <ul class="menu bg-base-200 rounded-box">
            {docs.map((doc) => (
              <li>
                <a href={`#${doc.id}`}>
                  {doc.icon === 'home' && (
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                    </svg>
                  )}
                  {doc.icon === 'star' && (
                    <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                  )}
                  {doc.icon === 'document' && (
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                  )}
                  {doc.icon === 'check' && (
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  )}
                  {doc.title}
                </a>
              </li>
            ))}
          </ul>
          <div class="mt-4">
            <a
              href="https://github.com/PR-CYBR/PR-CYBR-MAP"
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-outline btn-block btn-sm"
            >
              <svg class="h-4 w-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
              </svg>
              View on GitHub
            </a>
          </div>
        </div>
      </div>

      <!-- Content -->
      <div class="md:col-span-3 space-y-8">
        {docs.map((doc) => (
          <div id={doc.id} class="card bg-base-200 shadow-xl scroll-mt-20">
            <div class="card-body">
              <div class="flex items-center justify-between mb-4">
                <h2 class="card-title text-2xl">{doc.title}</h2>
                <a
                  href={`https://github.com/PR-CYBR/PR-CYBR-MAP/blob/main/${doc.githubPath}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="btn btn-sm btn-ghost"
                >
                  <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                </a>
              </div>
              <div class="prose prose-sm max-w-none">
                <p class="text-base-content/70">
                  View this document on GitHub: 
                  <a href={`https://github.com/PR-CYBR/PR-CYBR-MAP/blob/main/${doc.githubPath}`} target="_blank" rel="noopener noreferrer" class="link link-primary">
                    {doc.githubPath}
                  </a>
                </p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</Layout>

<style>
  .prose {
    @apply text-base-content;
  }
  .prose h1, .prose h2, .prose h3, .prose h4 {
    @apply text-base-content font-bold mt-6 mb-4;
  }
  .prose h1 {
    @apply text-3xl;
  }
  .prose h2 {
    @apply text-2xl;
  }
  .prose h3 {
    @apply text-xl;
  }
  .prose p {
    @apply mb-4;
  }
  .prose ul, .prose ol {
    @apply ml-6 mb-4;
  }
  .prose li {
    @apply mb-2;
  }
  .prose a {
    @apply text-primary hover:underline;
  }
  .prose code {
    @apply bg-base-300 px-2 py-1 rounded text-sm;
  }
  .prose pre {
    @apply bg-base-300 p-4 rounded-lg overflow-x-auto mb-4;
  }
  .prose blockquote {
    @apply border-l-4 border-primary pl-4 italic my-4;
  }
</style>
