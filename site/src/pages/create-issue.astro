---
import Layout from '../layouts/Layout.astro';

const issueTemplates = [
  {
    title: 'Bug Report',
    description: 'Report a bug or issue with the application',
    icon: 'bug',
    colorClass: 'border-error hover:border-error',
    badgeClass: 'badge-error',
    url: 'https://github.com/PR-CYBR/PR-CYBR-MAP/issues/new?template=bug_report.md&labels=bug',
  },
  {
    title: 'Feature Request',
    description: 'Suggest a new feature or enhancement',
    icon: 'lightbulb',
    colorClass: 'border-success hover:border-success',
    badgeClass: 'badge-success',
    url: 'https://github.com/PR-CYBR/PR-CYBR-MAP/issues/new?template=feature_request.md&labels=enhancement',
  },
  {
    title: 'Documentation',
    description: 'Report issues or suggest improvements to documentation',
    icon: 'doc',
    colorClass: 'border-info hover:border-info',
    badgeClass: 'badge-info',
    url: 'https://github.com/PR-CYBR/PR-CYBR-MAP/issues/new?labels=documentation&title=Docs:',
  },
  {
    title: 'Question',
    description: 'Ask a question about the project',
    icon: 'question',
    colorClass: 'border-warning hover:border-warning',
    badgeClass: 'badge-warning',
    url: 'https://github.com/PR-CYBR/PR-CYBR-MAP/issues/new?labels=question&title=Question:',
  },
];
---

<Layout title="Create Issue">
  <div class="container mx-auto px-4 py-8 max-w-5xl">
    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold mb-4">Create an Issue</h1>
      <p class="text-lg text-base-content/70">
        Choose the type of issue you'd like to report or create a custom issue on GitHub
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-6 mb-8">
      {issueTemplates.map((template) => (
        <a
          href={template.url}
          target="_blank"
          rel="noopener noreferrer"
          class={`card bg-base-200 hover:bg-base-300 shadow-xl transition-all hover:scale-105 border-2 ${template.colorClass}`}
        >
          <div class="card-body">
            <div class={template.icon === 'bug' ? 'text-error mb-4' : template.icon === 'lightbulb' ? 'text-success mb-4' : template.icon === 'doc' ? 'text-info mb-4' : 'text-warning mb-4'}>
              {template.icon === 'bug' && (
                <svg class="h-12 w-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              )}
              {template.icon === 'lightbulb' && (
                <svg class="h-12 w-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                </svg>
              )}
              {template.icon === 'doc' && (
                <svg class="h-12 w-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              )}
              {template.icon === 'question' && (
                <svg class="h-12 w-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              )}
            </div>
            <h2 class="card-title">{template.title}</h2>
            <p class="text-sm text-base-content/70">{template.description}</p>
            <div class="card-actions justify-end mt-4">
              <div class={`badge ${template.badgeClass}`}>Open in GitHub</div>
            </div>
          </div>
        </a>
      ))}
    </div>

    <div class="divider">OR</div>

    <div class="card bg-base-200 shadow-xl">
      <div class="card-body items-center text-center">
        <h2 class="card-title">Create a Custom Issue</h2>
        <p class="text-base-content/70">
          If none of the templates above fit your needs, create a custom issue
        </p>
        <div class="card-actions mt-4">
          <a
            href="https://github.com/PR-CYBR/PR-CYBR-MAP/issues/new/choose"
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn-primary"
          >
            <svg class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
            </svg>
            Open GitHub Issue Chooser
          </a>
        </div>
      </div>
    </div>

    <div class="alert alert-info shadow-lg mt-8">
      <svg class="stroke-current flex-shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <div>
        <h3 class="font-bold">Before creating an issue</h3>
        <div class="text-xs">Please check if a similar issue already exists to avoid duplicates</div>
      </div>
      <div class="flex-none">
        <a href="https://github.com/PR-CYBR/PR-CYBR-MAP/issues" target="_blank" rel="noopener noreferrer" class="btn btn-sm btn-ghost">
          View Existing Issues
        </a>
      </div>
    </div>
  </div>
</Layout>
