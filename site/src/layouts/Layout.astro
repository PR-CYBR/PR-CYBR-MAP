---
import ThemeSwitcher from '../components/ThemeSwitcher';
import '../styles/global.css';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = 'PR-CYBR emergency response and situational awareness map' } = Astro.props;
const currentPath = Astro.url.pathname;

const navItems = [
  { label: 'Home', href: '/PR-CYBR-MAP/' },
  { label: 'Map', href: '/PR-CYBR-MAP/map' },
  { label: 'Statistics', href: '/PR-CYBR-MAP/statistics' },
  { label: 'Discussions', href: '/PR-CYBR-MAP/discussions' },
  { label: 'Dev Board', href: '/PR-CYBR-MAP/development-board' },
  { label: 'Create Issue', href: '/PR-CYBR-MAP/create-issue' },
  { label: 'Docs', href: '/PR-CYBR-MAP/docs' },
  { label: 'Visualizer', href: '/PR-CYBR-MAP/visualizer' },
];

// Build time info
const buildTime = new Date().toISOString();
const shortSha = 'dev'; // Will be replaced by CI
---

<!doctype html>
<html lang="en" data-theme="nightfall">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/PR-CYBR-MAP/favicon.svg" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script is:inline>
      // Prevent FOUC by setting theme immediately
      (function() {
        const theme = localStorage.getItem('theme') || 'nightfall';
        document.documentElement.setAttribute('data-theme', theme);
      })();
    </script>
  </head>
  <body class="bg-base-100 text-base-content min-h-screen flex flex-col">
    <!-- Skip to content link for accessibility -->
    <a href="#main-content" class="skip-to-content">
      Skip to content
    </a>

    <!-- Navigation -->
    <header class="navbar bg-base-200 shadow-lg sticky top-0 z-40">
      <div class="navbar-start">
        <div class="dropdown">
          <label tabindex="0" class="btn btn-ghost lg:hidden">
            <svg
              class="h-5 w-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"
              ></path>
            </svg>
          </label>
          <ul
            tabindex="0"
            class="menu menu-sm dropdown-content mt-3 z-50 p-2 shadow-lg bg-base-200 rounded-box w-52"
          >
            {navItems.map((item) => (
              <li>
                <a
                  href={item.href}
                  class={currentPath === item.href ? 'active' : ''}
                >
                  {item.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
        <a href="/PR-CYBR-MAP/" class="btn btn-ghost normal-case text-xl font-bold">
          PR-CYBR-MAP
        </a>
      </div>
      <div class="navbar-center hidden lg:flex">
        <ul class="menu menu-horizontal px-1">
          {navItems.map((item) => (
            <li>
              <a
                href={item.href}
                class={currentPath === item.href ? 'active' : ''}
              >
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      <div class="navbar-end gap-2">
        <a
          href="https://github.com/PR-CYBR/PR-CYBR-MAP"
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn-ghost btn-sm"
          aria-label="View on GitHub"
        >
          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
            <path
              fill-rule="evenodd"
              d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
              clip-rule="evenodd"
            />
          </svg>
        </a>
        <ThemeSwitcher client:load />
      </div>
    </header>

    <!-- Breadcrumb -->
    <div class="bg-base-200 px-4 py-2 text-sm">
      <div class="breadcrumbs text-sm">
        <ul>
          <li><a href="/PR-CYBR-MAP/">Home</a></li>
          {currentPath !== '/PR-CYBR-MAP/' && (
            <li class="font-semibold">{title}</li>
          )}
        </ul>
      </div>
    </div>

    <!-- Main Content -->
    <main id="main-content" class="flex-1">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="footer footer-center p-10 bg-base-200 text-base-content mt-auto">
      <div class="grid grid-flow-col gap-4">
        <a href="https://github.com/PR-CYBR/PR-CYBR-MAP" class="link link-hover">GitHub</a>
        <a href="https://github.com/PR-CYBR/PR-CYBR-MAP/issues" class="link link-hover">Issues</a>
        <a href="https://github.com/PR-CYBR/PR-CYBR-MAP/discussions" class="link link-hover">Discussions</a>
        <a href="/PR-CYBR-MAP/docs" class="link link-hover">Documentation</a>
      </div>
      <div>
        <p class="text-sm opacity-70">
          Last deployed: {new Date(buildTime).toLocaleString()}
        </p>
        <p class="text-sm opacity-70">
          Commit: <code class="text-xs">{shortSha}</code>
        </p>
      </div>
      <div>
        <p>Â© 2024 PR-CYBR. Licensed under GPL-3.0</p>
      </div>
    </footer>
  </body>
</html>
